<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/&#64popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <link href="~/Content/Hotel.css" rel="stylesheet" />
</head>
<body>

    @Html.Partial("_LoginPartial")

    @if (ViewBag.NoHero == null)
    {
        <h1 class="text-center w-100">@ViewBag.Title</h1>
    }

    @RenderBody()

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-body-secondary">
                &copy;
                <script>document.write(new Date().getFullYear().toString());</script>
                Scenic Hotel
            </p>

            <ul class="justify-content-end">
                @Html.ActionLink("About Us", "About", "Home", routeValues: null, htmlAttributes: new { title = "Home", @class = "btn" })
                @Html.ActionLink("Contact Us", "Contact", "Home", routeValues: null, htmlAttributes: new { title = "Home", @class = "btn" })
            </ul>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
