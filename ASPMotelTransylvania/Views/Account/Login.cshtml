@using ASPScenicHotel.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main class="container vstack">
    <h2 id="title">@ViewBag.Title.</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use an account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="mb-4">
                        <div>
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            <div class="col-md-11 m-2">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-0 bg-light rounded-end" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div>
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            <div class="col-md-11 m-2">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control border-0 bg-light rounded-end" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    @Html.ActionLink("Register", "Register", "Account", new { @class = "btn m-2" })
                    <input type="submit" value="Login" class="btn m-2" />
                }
            </section>
        </div>
    </div>
</main>
